{
  "name": "fc-build",
  "version": "0.0.3",
  "main": "./dist/index.js",
  "fc-docker": {
    "version": "1.9.17",
    "registry_default": "registry.cn-beijing.aliyuncs.com",
    "registry_mirrors": [
      "registry.cn-beijing.aliyuncs.com",
      "registry.hub.docker.com"
    ]
  },
  "dependencies": {
    "@alicloud/fc-builders": "^0.15.3",
    "@serverless-devs/core": "^0.0.x",
    "dockerode": "^3.2.1",
    "draftlog": "^1.0.12",
    "fs-extra": "^9.1.0",
    "ip": "^1.1.5",
    "js-yaml": "^4.0.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "nested-object-assign": "^1.0.4",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.6",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.168",
    "@types/node": "14",
    "f2elint": "^0.4.4",
    "jest": "^26.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.14",
    "typescript": "^3.9.7",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.6.0"
  },
  "scripts": {
    "dev": "npx tsc -w -p tsconfig.json",
    "prebuild": "rimraf dist",
    "build": "npx tsc -p tsconfig.json",
    "build:component": "npx webpack --mode=production",
    "package-zip": "cp -rf package*.json publish.yaml ./dist",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "f2elint scan",
    "fix": "f2elint fix",
    "typecheck": "npx tsc -p tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "f2elint exec commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "f2elint exec lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts}": "f2elint exec eslint"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
